# Auto hiding bar
bar {

    status_command i3status --config ~/.i3/status.hide.conf
    font pango:DejaVu Sans Mono Book 10, Icons 10
    
    tray_output none
    workspace_buttons no

    # Set auto hiding
    mode hide
    modifier $maltgr

    colors {
        background #202020
        statusline #66bbff
        separator  #202020
    }

}

