# switch to workspace
bindsym $mod+1 workspace "1:Web"
bindsym $mod+2 workspace "2:Shell"
bindsym $mod+3 workspace "3:Work"
bindsym $mod+4 workspace "4:Tools"
bindsym $mod+5 workspace "5:Misc"
